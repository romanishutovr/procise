<header class="relative min-h-[84px] flex items-center">
  <div class="w-full py-5 px-6 flex justify-between items-center border-t border-gray-200">
    <div class="flex items-center">
      <a href="/{{ page.lang }}">
        <img src="/assets/logo.png" alt="company logo" class="md:mr-10 w-[141px] h-[39px]"/>
      </a>
      <nav class="z-10 md:block hidden">
        <ul class="flex z-10 items-center">
          {% include "../navSolutions.njk" %}
          {% include "../navProducts.njk" %}
          <li class="products mr-8 cursor-pointer">
            <a href="/{{ page.lang }}/customers">Customers</a>
          </li>
          <li class="products mr-8 cursor-pointer">
            <a href="/{{ page.lang }}/about-us">About</a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="flex items-center mr-2">
      <button class="btn btn-primary btn-small hidden md:block">
        Get Started
      </button>
      <button class="ml-6 lang-change w-[44px] h-[44px] justify-center items-center flex">
        <img src="/assets/world.png" alt="change language" class="w-[26px] h-[26px]"/>
        <div class="text-2xl md:text-base lang-change__menu z-10 max-h-0 overflow-hidden absolute left-0 md:left-auto right-0
            top-[84px] shadow">
          <ul class="bg-white border-t border-gray-200 p-2 rounded-b-xl text-left ">
            {% for item in metadata.languages %}
              <li class="">
                <a href="/{{ item.code }}" class="py-6 md:py-2 px-3 hover:bg-[#F3F3F3] flex justify-between min-w-[210px]">
                  {{ item.text }}
                  {% if page.lang == item.code %}
                    <div class="ml-2 w-[20px]">
                      <svg
                        width="20"
                        height="20"
                        viewBox="0 0 20 20"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        xmlns:xlink="http://www.w3.org/1999/xlink">
                        <rect width="20" height="20" fill="url(#pattern0)"/>
                        <defs>
                          <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                            <use xlink:href="#image0_191_1690" transform="scale(0.02)"/>
                          </pattern>
                          <image
                            id="image0_191_1690"
                            width="50"
                            height="50"
                            xlink:href="data:image/png;base64,"/>
                        </defs>
                      </svg>
                    </div>
                  {% endif %}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </button>
      {% include "../navMobile.njk" %}
    </div>
  </div>
</header>